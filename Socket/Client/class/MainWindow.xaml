<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="MainWindow" Height="128" Width="400">
    <Grid>
        <Button x:Name="connect_button" Content="Connect" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Click="btn_Connect_Click"/>
        <Button x:Name="send_button" Content="Send" HorizontalAlignment="Left" Margin="315,35,0,0" VerticalAlignment="Top" Click="btn_Send_Click"/>
        <TextBox x:Name="port_textBox" HorizontalAlignment="Left" Margin="210,12,0,0" Text="60001" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="ip_comboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="196"/>
        <TextBox x:Name="message_textBox" HorizontalAlignment="Left" Margin="10,37,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBlock x:Name="receive_text" HorizontalAlignment="Left" Margin="10,60,0,0" Text="Server Response" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>

</Window>
